{
  "expo": {
    "name": "easy-park-1",
    "slug": "easy-park-1",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.jpg",
    "scheme": "easypark1",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/full_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#79badd"
    },
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show your position on the map"
      },
      "config": {
        "googleMapsApiKey": ${{ secrets.IOS_API_KEY }}
      },
      "bundleIdentifier": "com.anonymous.easypark1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#ffffff",
        "permissions": [
          "ACCESS_FINE_LOCATION",
          "ACCESS_COARSE_LOCATION",
          "ACCESS_FINE_LOCATION",
          "ACCESS_COARSE_LOCATION"
        ]
      },
      "edgeToEdgeEnabled": true,
      "config": {
        "apikey": ${{ secrets.ANDROID_API_KEY }}
      },
      "package": "com.anonymous.easypark1"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/logo.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
